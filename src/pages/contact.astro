---
import { Image } from "@astrojs/image/components";
import { Telephone } from "@features/contact";
import Canvas from "@features/home/components/Canvas.astro";
import Layout from "@layouts/Layout.astro";
import email from "../assets/images/email.png";
---

<script>
  import gsap from "gsap";

  gsap.fromTo(
    "#mail",
    {
      opacity: 0,
      y: -5,
    },
    {
      opacity: 1,
      x: 0,
      duration: 2,
      ease: "power1.inOut",
    }
  );
</script>

<Layout
  Canvas={Canvas}
  isHome={true}
  background="#000"
  title="Contact - Grahic Designer at Cagnes sur Mer"
>
  <div class="wrapper-contact" slot="main-content">
    <a id="mail" style="opacity: 0;" href="mailto:drawmeasheepdesign@gmail.com">
      <Image src={email} alt="Contact Draw me a sheep design by mail" />
    </a>
    <Telephone />
  </div>
</Layout>

<style lang="scss" is:global>
  .wrapper-contact {
    max-width: clamp(300px, 100rem, 100rem);
    margin-left: auto;
    margin-right: auto;
    min-height: calc(100vh - 133px);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 100vh;

    @media screen and (max-width: 1280px) {
      padding: 0 12px;
    }
  }

  footer {
    display: none !important;
  }
</style>
