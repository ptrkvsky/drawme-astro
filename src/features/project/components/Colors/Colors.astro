---
import { Image } from "@astrojs/image/components";
import { SanityImage } from "@interfaces/SanityImage";

// import Color1 from './Color1.astro';
// import Color2 from './Color2.astro';
// import Color3 from './Color3.astro';

interface AstroProps {
  color1: SanityImage;
  color2: SanityImage;
  color3: SanityImage;
}

const { color1, color2, color3 } = Astro.props as AstroProps;
---

<script>
  import { revealColors } from "./Colors.animation";
  revealColors();
</script>

<div class="wrapper-colors" data-speed="0.95" data-lag="0.02">
  <div>
    <Image
      class="color-item"
      src={color1.asset.url}
      alt="couleur 1"
      width={color1.asset.metadata.dimensions.width}
      height={color1.asset.metadata.dimensions.height}
      format="avif"
    />
  </div>
  <div>
    <Image
      class="color-item"
      src={color2.asset.url}
      alt="couleur 2"
      width={color2.asset.metadata.dimensions.width}
      height={color2.asset.metadata.dimensions.height}
      format="avif"
    />
  </div>
  <div>
    <Image
      class="color-item"
      src={color3.asset.url}
      alt="couleur 3"
      width={color3.asset.metadata.dimensions.width}
      height={color3.asset.metadata.dimensions.height}
      format="avif"
    />
  </div>
</div>

<style lang="scss" is:global>
  .wrapper-colors {
    display: flex;
    gap: clamp(10px, 7rem, 7rem);
    margin-top: 2rem;
    margin-left: auto;
    margin-right: auto;
    padding-left: 6rem;

    @media screen and (max-width: 768px) {
      order: -1;
      margin-top: 48px;
      padding: 0 24px;
      box-sizing: border-box;
      justify-content: space-between;
      width: 100%;
      .color-item {
        max-width: 100px;
      }
    }
  }
</style>
