<script>
  import { SplitText } from "gsap/SplitText";
  import { splitTelephone } from "./Telephone.animation";
  import gsap from "gsap";
  import { getPreloaderDelay } from "@helpers/getPreloaderDelay";
  gsap.registerPlugin(SplitText);

  document.addEventListener("DOMContentLoaded", () => {
    const delayPreloader = getPreloaderDelay();
    const delay = delayPreloader + 0.5;
    splitTelephone();
    gsap.set("#telephone div", { yPercent: -103 });

    gsap.timeline().to("#telephone div", {
      duration: 0.75,
      yPercent: 0,
      stagger: 0.05,
      ease: "expo.inOut",
      delay,
    });
  });
</script>

<a id="telephone" class="contact___telephone o-hidden" href="tel:+33635359793">
  06.35.35.97.93
</a>

<style lang="scss" is:global>
  .contact___telephone {
    position: relative;
    padding-left: 1.5rem;
    color: #fff;
    font-size: 0;
    font-family: var(--text-script-bold);
    line-height: 0.85;
  }

  .contact___telephone div {
    position: relative;
    display: inline-block;
    font-size: clamp(71px, 23rem, 50rem);
  }
</style>
