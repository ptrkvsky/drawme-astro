---
import ReactCanva from './ReactCanva';
---

<script>
  import { ParamsSplitAndReveal, splitAndReveal } from '@helpers/gsap';
  document.addEventListener('load', () => {
    const paramsSplitAndRevealTitle: ParamsSplitAndReveal = {
      element: '#draw-something-title',
      typeSplit: 'chars',
      trigger: '#section-ds-something',
    };

    splitAndReveal(paramsSplitAndRevealTitle);
  });
</script>

<section id="section-ds-something" class="section-draw-something">
  <h2 id="draw-something-title" class="title">What would you draw for me ?</h2>
  <ReactCanva client:only="react" />
  <div class="wrapper-button">
    <div class="relative container">
      <button class="button-send" type="button">
        Send me your artwork or your dick &gt;
      </button>
    </div>
  </div>
</section>

<style lang="scss">
  .section-draw-something {
    position: relative;
    z-index: 30;
    font-size: 2.4rem;
    cursor: none;
    min-height: clamp(55.2rem, 55.2rem, 520px);

    @media screen and (max-width: 768px) {
      min-height: 50vh;
    }

    .title {
      position: absolute;
      top: clamp(35px, 6.7rem, 6.7rem);
      width: 100%;
      text-align: center;
      color: #fff;
      font-size: clamp(
        34px,
        var(--font-size-heading),
        var(--font-size-heading)
      );
      text-align: center;
    }

    .wrapper-button {
      position: absolute;
      bottom: clamp(20px, 3.3rem, 3.3rem);
      left: 0;
      right: 0;

      .container {
        display: flex;
        justify-content: flex-end;

        @media screen and (max-width: 768px) {
          justify-content: center;
        }
      }
    }

    .button-send {
      background-color: transparent;
      font-size: clamp(12px, 1.4rem, 1.4rem);
      text-transform: uppercase;
      font-family: var(--text-body-medium);
      letter-spacing: 0.2rem;
      color: var(--color-white-beauty);
      border: none;
    }
  }
</style>
