<button
  style={{ opacity: 0 }}
  id="burger-button"
  class="burger-button"
  aria-label="button-menu"
>
  <div class="relative">
    <div id="burger-open">
      <div class="wrapper-open">
        <span class="line-open line-1"></span>
        <span class="line-open line-2"></span>
        <span class="line-open line-3"></span>
      </div>
    </div>
  </div>
</button>

<style lang="scss">
  .burger-button {
    position: fixed;
    z-index: 550;
    top: clamp(10px, 0.9rem, 0.9rem);
    left: clamp(14px, 1.4rem, 1.4rem);
    padding: clamp(10px, 1rem, 1rem);
    border: none;
    background: transparent;
    cursor: pointer;

    @media screen and (max-width: 768px) {
      top: 8px;
      left: 14px;
    }

    .wrapper-open {
      width: clamp(19px, 1.9rem, 1.9rem);
      height: clamp(17px, 1.7rem, 1.7rem);
      overflow: hidden;
      opacity: 1;

      @media screen and (max-width: 1300px) {
        height: 15px;
      }

      @media screen and (max-width: 768px) {
        width: 32px;
        height: 24px;
        box-sizing: border-box;
      }

      .line-open {
        position: absolute;
        display: block;
        width: 100%;
        height: clamp(3px, 0.3rem, 0.3rem);

        @media screen and (max-width: 768px) {
          height: 4px;
        }
        &.line-1 {
          top: 0;
        }
        &.line-2 {
          top: 50%;
          transform: translateY(-50%);
        }
        &.line-3 {
          bottom: 0;
        }
      }
    }
  }

  .line-open {
    position: relative;
    display: block;
    width: 19px;
    height: 3px;
    background-color: #fff;
    transition: all 0.3s linear;
    @media screen and (max-width: 550px) {
      width: 36px;
      height: 6px;
    }
  }
</style>
