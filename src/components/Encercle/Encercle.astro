---
interface AstroProps {
  idPath: string;
  idScrollTrigger: string;
  animate: () => void;
}

const { idPath, animate } = Astro.props as AstroProps;
---

<script define:vars={{ idScrollTrigger: idScrollTrigger }}>
  document.addEventListener('DOMContentLoaded', function () {
    animate();
  });
</script>

<svg
  xmlns="http://www.w3.org/2000/svg"
  viewBox="0 0 500 150"
  preserveAspectRatio="none"
>
  <path
    id={idPath}
    class="st0"
    d="M9.3,127.3c49.3-3,150.7-7.6,199.7-7.4c121.9,0.4,189.9,0.4,282.3,7.2C380.1,129.6,181.2,130.6,70,139 c82.6-2.9,254.2-1,335.9,1.3c-56,1.4-137.2-0.3-197.1,9"
  ></path>
</svg>

<style type="text/css">
  .st0 {
    fill: none;
    stroke: #71f5df;
    stroke-width: 8px;
  }
</style>
