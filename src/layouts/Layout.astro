---
import Gsap from '@components/Gsap.astro';
import Header from '@components/Header.astro';
import Logo from '@components/Logo.astro';
import '@styles/fonts.scss';
import '@styles/reset.css';
import '@styles/utilities.scss';
import '@styles/variables.scss';
import '@styles/global.scss';
import '@styles/functions.scss';
import { Menu, Burger, Footer } from '@components/index';
import CanvasHome from '@features/home/components/Canvas.astro';
import CanvasProject from '@features/project/components/Canvas.astro';



export interface Props {
  title: string;
  background: string;
}

const currentPath = Astro.url.pathname;
const isHome = currentPath === "/"
const isProject = currentPath.includes("/projects/")
const { title, background } = Astro.props as Props;

let Canvas

if(isHome) Canvas = CanvasHome
if(isProject) Canvas = CanvasProject
---

<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width" />
<link rel="icon" type="image/x-icon" href="/favicon.png" />
<meta name="generator" content={Astro.generator} />
<title>{title}</title>

<body style={{ background }} class="canva-black">
  <Burger />
  <Header />
  <!-- <slot name="canvas" /> -->
  
  <Canvas />
  <Logo />
  <Gsap>
    <div id="main-content" style={{ opacity: 0 }}>
      <slot name="main-content" />
    </div>
    <Footer />
  </Gsap>
  <Menu />
  <style lang="scss" is:global>
    body {
      transition: all 0.3s linear;
    }
    :global(:root) {
      font-size: calc(100vw / 1920 * 10);
    }
  </style>
</body>
